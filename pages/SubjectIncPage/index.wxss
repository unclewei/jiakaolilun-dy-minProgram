.weihu {
  width: 100%;
  text-align: center;
  padding: 20px;
  box-sizing: border-box;
}
.init {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  color: #404040;
  padding-bottom: 100px;
}
.init .bannerContent {
  position: relative;
  width: 100%;
  height: 370px;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  box-sizing: border-box;
  margin-bottom: 20px;
}
.init .menu {
  width: 100%;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: space-around;
  margin-bottom: 20px;
}
.init .menu .menuItem {
  position: relative;
  width: 40%;
  height: 120px;
  border: 2px solid #cacaca;
  border-top-left-radius: 20px;
  text-align: center;
  padding: 5px;
  background: #fff;
}
.init .menu .menuItem .menuItemContent {
  font-weight: 600;
  color: #777777;
  height: 90px;
  border-top-left-radius: 20px;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}
.init .menu .menuItem .menuItemContent .price .priceNum {
  font-size: 35px;
}
.init .menu .menuItem .menuItemContentActive {
  color: #3a1d19 !important;
  background-color: #fcede8 !important;
}
.init .menu .menuItem .menuTitle {
  font-size: 12px;
}
.init .menu .menuItem .moreUser {
  position: absolute;
  width: 100px;
  text-align: center;
  top: -16px;
  right: 0;
  font-size: 13px;
  background: linear-gradient(to right, #f65d3b, #da443a) !important;
  color: #fff;
  border-top-left-radius: 20px;
  border-bottom-right-radius: 20px;
}
.init .menu .menuItem .paidDone {
  position: absolute;
  width: 100px;
  text-align: center;
  top: -21px;
  right: -2px;
  font-size: 13px;
  background: #1AAD19;
  color: #fff;
}
.init .menu .menuItem .footer {
  color: #777777;
  width: 100%;
  position: absolute;
  font-size: 12px;
  height: 30px;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #faeadd;
  font-weight: 600;
  bottom: 0;
  left: 0;
}
.init .menu .menuItem .footerActive {
  color: #fff !important;
  background: rgba(255, 255, 255, 0) !important;
}
.init .menu .menuItemActive {
  border: 2px solid #e8755a !important;
  background: linear-gradient(to right, #e8755a, #e4885d) !important;
}
.init .mainTitle {
  font-size: 22px;
  font-weight: bold;
  margin-bottom: 20px;
  text-align: center;
}
.init .paddingBottom {
  padding-bottom: 80px !important;
}
.init .mainContent {
  position: relative;
  width: 100%;
  box-sizing: border-box;
  padding: 20px;
}
.init .mainContent .benifyBox {
  position: relative;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.init .mainContent .benifyBox .disabled {
  opacity: 0.25;
}
.init .mainContent .benifyBox .benifyItem {
  position: relative;
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-sizing: border-box;
  padding: 0 6px;
  margin-bottom: 20px;
}
.init .mainContent .benifyBox .benifyItem .benifyImageBox {
  position: relative;
  width: 50px;
  height: 50px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  margin-bottom: 10px;
  overflow: hidden;
  background: #fbf5eb;
}
.init .mainContent .benifyBox .benifyItem .benifyImageBox .benifyImage {
  width: 60%;
  height: 60px;
  object-fit: contain;
}
.init .mainContent .benifyBox .benifyItem .benifyText {
  font-size: 12px;
}
.init .buy {
  overflow: hidden;
  position: fixed;
  bottom: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #fff;
  width: 100%;
  height: 60px;
  box-shadow: 0 1px 10px 0 rgba(0, 0, 0, 0.05);
  box-sizing: border-box;
  z-index: 2;
  padding: 0 10px;
}
.init .buy span {
  width: 100%;
}
.init .buy .buyButton {
  box-sizing: border-box;
  width: 100%;
  height: 50px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: linear-gradient(to right, #e8755a, #e5b198) !important;
  border-radius: 50px;
  color: #fff;
  padding: 0 5px;
  padding-left: 15px;
}
.init .buy .buyButton .priceNum {
  font-size: 30px;
}
.init .buy .buyButton .insideBtn {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 180px;
  height: 40px;
  border-radius: 50px;
  background: linear-gradient(to right, #fff4e2, #e1cb96);
  color: #3a1d19;
  font-weight: 600;
}
.init .buy .buyButton .insideBtnPaidDone {
  background: linear-gradient(to right, #4b9cf3, #3661f3) !important;
  color: #fff;
}
.init .refundStep {
  width: 100%;
  box-sizing: border-box;
  padding: 20px;
  padding-bottom: 80px;
  padding-top: 0;
}
.init .refundStep .button {
  display: inline-block;
  background-color: #fff3f3;
  color: #ff6235;
  font-size: 12px;
  padding: 2px 4px;
  border-radius: 2px;
  margin-left: 5px;
  font-weight: 600;
}
.init .refundStep .data {
  margin-bottom: 30px;
}
.init .refundStep .data .item {
  min-width: 80px;
  margin-bottom: 20px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  color: #333;
  padding: 20px 10px;
  box-shadow: 0 1px 10px 0 rgba(0, 0, 0, 0.07);
}
.init .refundStep .data .item .content{
  display: flex;
  flex-direction: column;
}
.init .refundStep .data .item .content .title {
  display: flex;
  align-items: center;
  margin-bottom: 10px;
  font-weight: 600;
  color: #333;
  font-size: 15px;
}
.init .refundStep .data .item .content .title .numImg {
  width: 25px;
  margin-right: 5px;
}
.init .refundStep .data .item .content p {
  margin-bottom: 10px;
  color: #9197a3;
  font-size: 13px;
}
.init .refundStep .data .item .content .longP {
  width: 90%;
}
.init .refundStep .data .item .content .info {
  margin-bottom: 0px !important;
  color: #00a3ff !important;
}
.init .refundStep .data .item .btn {
  display: flex;
  align-items: center;
  justify-content: center;
  min-width: 70px;
  height: 30px;
  border-radius: 50px;
  background: linear-gradient(to right, #4b9cf3, #3661f3);
  color: #fff !important;
  padding: 0 10px;
  font-size: 13px;
  margin: 0;
}
.init .refundStep .data .item .success {
  background: linear-gradient(to right, #fff4e2, #e1cb96) !important;
  color: #3a1d19 !important;
  font-weight: 600;
}
.init .refundTips {
  font-size: 12px;
  font-weight: 600;
  color: #ee3c3c;
}
