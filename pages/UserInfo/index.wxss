.init {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  color: #404040;
}

.headerBox {
  height: 300rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 10rpx;
  border-radius: 10rpx;
}

.nickNameBox {
  display: flex;
  align-items: center;
}

.copyId {
  display: inline-block;
  background-color: #fff3f3;
  color: #ff6235;
  font-size: 12px;
  padding: 2px 4px;
  border-radius: 2px;
  margin-left: 5px;
  font-weight: 600;
}

.funcList {
  display: flex;
  flex-direction: column;
  width: 100%;
}


.funcItem {
  display: flex;
  align-items: center;
  padding: 15px 20px;
  width: 100% !important;
  box-sizing: border-box;
  border-bottom: 1px solid #f5f5f5;
}

.funcItem:active {
  background-color: #EEEEEE;
}

.funcText {
  display: flex;
  flex: 1;
  align-items: center;
}

.funcIcon {
  width: 25px;
  margin-right: 5px;
}

.funcArrow {
  width: 15px;
}