.weihu {
  width: 100%;
  text-align: center;
  padding: 20px;
  box-sizing: border-box;
}
.init {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding-bottom: 100px;
}
.init .titleContent {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 15px;
  margin-top: 40px;
}
.init .titleContent .titleBox {
  width: 48%;
  height: 70px;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  color: white;
  background: linear-gradient(to right, #5673f4, #97a2f5) !important;
  border-radius: 5px;
}
.init .titleContent .titleBox .titleIcon {
  object-fit: contain;
  margin-right: 10px;
  width: 30px;
  height: 30px;
}
.init .titleContent .titleBox .titleBoxText {
  display: flex;
  flex-direction: column;
}
.init .titleContent .titleBox .titleBoxText .titleText {
  font-size: 1rem;
}
.init .titleContent .titleBox .titleBoxText .titleDecs {
  font-size: 0.75rem;
}
.init .bodyContent {
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  padding: 0 15px;
  padding-bottom: 20px;
  margin-top: 15px;
  box-sizing: border-box;
  border-bottom: 6px solid #f5f5f5;
}
.init .bodyContent .bodyItem {
  position: relative;
  width: 25%;
  height: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.init .bodyContent .bodyItem .bodyIcon {
  width: 30px;
  height: 30px;
  object-fit: contain;
  margin-bottom: 5px;
}
.init .bodyContent .bodyItem .bodyTitle {
  font-size: 0.875rem;
  margin-bottom: 5px;
}
.init .bodyContent .bodyItem .bodyDesc {
  font-size: 0.625rem;
  color: #9197a3;
}
.init .detailContent {
  position: relative;
  width: 100%;
  display: flex;
  align-items: center;
  flex-wrap: wrap;
  box-sizing: border-box;
  padding: 0 15px;
  padding-top: 20px;
  margin-top: 10px;
}
.init .detailContent .detailTitle {
  width: 100%;
  font-size: 1.125rem;
  font-weight: 500;
  line-height: 30px;
  color: #444;
}
.init .detailContent .detailItem {
  display: flex;
  align-items: center;
  height: 60px;
  width: 50%;
  box-sizing: border-box;
  border-bottom: 1px #f5f5f5 solid;
}
.init .detailContent .detailNum {
  width: 20px;
  height: 20px;
  min-width: 20px;
  min-height: 20px;
  line-height: 20px;
  text-align: center;
  border: none;
  color: #fff;
  background: #4392ec;
  border-radius: 50px;
  margin-right: 7px;
  font-size: 0.625rem;
}
.init .detailContent .detailNum:nth-child(even) {
  padding-left: 15px;
}
.init .detailContent .detailTtiel {
  font-size: 1rem;
  color: #444;
}
.init .detailContent .detailDecs {
  flex: 1;
  text-align: end;
  font-size: 0.625rem;
  color: #9197a3;
}
.init .detailContent .detailDecs:nth-child(odd) {
  padding-right: 15px;
}
