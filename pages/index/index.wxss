.mainContent .bodyBox .bodyBig .bodyBigItem .bodyBigIconGreen {
  background: linear-gradient(to Bottom, #bdefde,#51c59E);
}

.mainContent .bodyBox .bodyBig .bodyBigItem .bodyBigTitle {
