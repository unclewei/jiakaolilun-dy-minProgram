  width: 40px;
  font-size: 0.75rem;
  text-align: center;
  border-radius: 10px;
  background-color: #0ab10f;
  color: #fff;
}

.mainContent .bodyBox .bodySmall .smallItem .smallItemText .dot {
  background-color: #fe3269 !important;
  width: 23px;
  height: 23px;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  right: -8px;
}

.mainContent .bodyBox .bodySmall .smallItem .smallItemText .hot {
  background-color: #ff3767 !important;
  width: 62px !important;
  right: -38px;
}

.mainContent .bodyBox .bodySmall .smallItem .smallItemText .must {
