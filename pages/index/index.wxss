.init {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  color: #404040;
}

.bannerContent {
  position: relative;
  width: 100%;
  height: 340rpx;
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  box-sizing: border-box;
}

.kemu {
  width: 100%;
  height: 40px;
  box-sizing: border-box;
  display: flex;

}

.kemuItem {
  flex: 1;
  position: relative;
  padding: 5px 10px;
  color: #6d6d6d;
  font-weight: 500;
  box-sizing: border-box;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 2px #f5f5f5 solid;


}

.text {
  position: relative;

}

.rightIcon {
  position: absolute;
  width: 15px;
  right: -20px;
  top: 6px;
}

.active {
  background-color: #eef8fd;
  color: #3a6acf;
  border-bottom: 2px #3a6acf solid !important;
}