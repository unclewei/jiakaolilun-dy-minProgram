/* pages/SharePoster/index.wxss */
.share-poster-container {
  min-height: 100vh;
  background-color: #f5f5f5;
  box-sizing: border-box;
}

.poster-wrapper {
  background-color: #f5f5f5;
  border-radius: 16rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-buttons {
  display: flex;
  justify-content: space-between;
  gap: 20rpx;
  padding: 0 20rpx;
  margin-bottom: 30rpx;
}

.action-btn {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 120rpx;
  border-radius: 16rpx;
  border: none;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
}

.action-btn::after {
  border: none;
}

.save-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: #fff;
  height: 85rpx;
}

.share-btn {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
  color: #fff;
}

.action-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.btn-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.btn-text {
  font-size: 28rpx;
  font-weight: 500;
}

.tips {
  text-align: center;
}

.tips-text {
  font-size: 24rpx;
  color: #999;
}