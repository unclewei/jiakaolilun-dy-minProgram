.stepSelect {
  position: relative;
  min-height: 28px;
}
.select {
  position: absolute;
  width: 55px;
  height: 28px;
  border-radius: 50px;
  font-size: 14px;
  background-color: #fff;
  color: black;
  line-height: 28px;
  border: 1px solid #e3e3e3;
}
.select1 {
  left: 0;
  z-index: 1;
}
.select2 {
  left: 30px;
  z-index: 1;
  text-align: right;
  padding-right: 10px;
  border: 1px solid #e3e3e3;
}
.step1NotActive {
  padding-left: 10px;
}
.active {
  width: 55px !important;
  background-color: #333333;
  color: #fff;
  text-align: center;
  z-index: 2 !important;
  padding: 0!important;
}
.rightActive{
  margin-left: 10px;
}
.step4Active {
  width: 55px !important;
  background-color: #333333;
  color: #fff;
  text-align: center;
  z-index: 2 !important;
  padding: 0!important;
  left: 40px;
}
