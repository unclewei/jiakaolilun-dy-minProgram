/** @format */
.read {
  width: fit-content;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background: #e9f4ff;
  border-radius: 10px;
  font-size: 12px;
  font-weight: 600;
  padding: 2px 6px;
  margin-right: 10px;
}
.read .readIcon {
  width: 16px;
  height: 16px;
}
.preloader_1 {
  min-width: 15px;
  position: relative;
  margin-left: 3px;
  margin-top: 5px;
}
.preloader_1 span {
  display: block;
  bottom: 0px;
  width: 3px;
  height: 5px;
  background: #9b59b6;
  position: absolute;
  animation: preloader_1 1.5s infinite ease-in-out;
}
.preloader_1 span:nth-child(2) {
  left: 5px;
  animation-delay: 0.1s;
}
.preloader_1 span:nth-child(3) {
  left: 10px;
  animation-delay: 0.2s;
}
@keyframes preloader_1 {
  0% {
    height: 5px;
    -webkit-transform: translateY(0px);
    background: #9b59b6;
  }
  25% {
    height: 15px;
    -webkit-transform: translateY(5px);
    background: #3498db;
  }
  50% {
    height: 5px;
    -webkit-transform: translateY(0px);
    background: #9b59b6;
  }
  100% {
    height: 5px;
    -webkit-transform: translateY(0px);
    background: #9b59b6;
  }
}
