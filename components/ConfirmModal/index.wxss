
.optionsBox {
  position: relative;
  height: 80rpx;
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

.optionsItem {
  position: relative;
  height: 100%;
  flex: 1;
  margin: 0 10rpx;
  font-size: 34rpx;
  font-weight: bold;
  color: #000;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 10rpx;
  overflow: hidden;
  padding: 0;
}

.optionText {
  z-index: 2;
  left: 5rpx;
}
.okText{
  color: green;
}