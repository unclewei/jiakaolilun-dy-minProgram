.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 16rpx;
  padding-top: 32px;
}

.confirm {
  position: relative;
  height: 80rpx;
  width: 50%;
  background: linear-gradient(to left, #89beff, #54bbff);
  margin: 30rpx auto;
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50rpx;
}

.image {
  margin-top: 30rpx;
  width: 400rpx;
  height: 400rpx;
}

.text {
  font-size: 28rpx;
}