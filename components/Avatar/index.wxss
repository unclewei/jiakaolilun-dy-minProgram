.comAvatar{

  width: 40px;
  height: 40px;
  min-width: 40px;
  min-height: 40px;
  border-radius: 40px;
  overflow: hidden;
  margin-right: 10px;
}
.avatar {
  width: 55px;
  height: 55px;
  border-radius: 50px;
  margin-right: 15px;
}
.avatarSmall{
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-right: 8px;
}
.userAvatar{
  width: 80px;
  height: 80px;
  min-width: 80px;
  min-height: 80px;
  border-radius: 80px;
  overflow: hidden;
  margin-right: 10px;

}
.footerAvatar{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}