.content {
  position: fixed;
  left: 0;
  top: 0;
  height: 100vh;
  width: 750rpx;
  z-index: 1000;
  /* 透明背景起点，避免闪烁 */
  background-color: rgba(255, 255, 255, 0);
  /* 使动画结束时保持最终状态 */
  animation-fill-mode: forwards;
}

/* 更平滑的 easing（渐进渐出） */
@keyframes contentFade {
  0% {
    background-color: rgba(255, 255, 255, 0);
    opacity: 0;
    transform: translateY(-10rpx);
  }

  30% {
    background-color: rgba(255, 255, 255, 1);
    opacity: 1;
    transform: translateY(0);
  }

  70% {
    background-color: rgba(255, 255, 255, 1);
    opacity: 1;
    transform: translateY(0);
  }

  100% {
    background-color: rgba(255, 255, 255, 0);
    opacity: 0;
    transform: translateY(10rpx);
  }
}

.contentShow {
  /* 使用 cubic-bezier 或 ease-in-out 都能实现渐进渐出 */
  animation: contentFade 2s cubic-bezier(.4, 0, .2, 1) forwards;
}

.topText {
  position: absolute;
  left: 50rpx;
  top: 20%;
  display: inline;
  font-size: 38rpx;
  font-weight: bold;
  opacity: 0;
  transform: translateX(-8rpx);
}

/* 平滑的横向位移 + 透明度渐显 */
@keyframes topTextIn {
  0% {
    transform: translateX(-8rpx);
    opacity: 0;
  }

  60% {
    transform: translateX(6rpx);
    opacity: 1;
  }

  100% {
    transform: translateX(0);
    opacity: 1;
  }
}

.topTextShow {
  animation: topTextIn 0.9s cubic-bezier(.4, 0, .2, 1) forwards;
  animation-delay: 0.18s;
}

.title {
  color: #333;
}

.subjectText {
  font-size: 60rpx;
  color: chocolate;
}

.bottomBox {
  position: absolute;
  right: 50rpx;
  bottom: 20%;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
  opacity: 0;
  transform: translateX(8rpx);
}

/* 平滑的向内位移 + 透明度渐显 */
@keyframes bottomBoxIn {
  0% {
    transform: translateX(8rpx);
    opacity: 0;
  }

  60% {
    transform: translateX(-6rpx);
    opacity: 1;
  }

  100% {
    transform: translateX(0);
    opacity: 1;
  }
}

.bottomBoxShow {
  animation: bottomBoxIn 1.1s cubic-bezier(.4, 0, .2, 1) forwards;
  animation-delay: 0.28s;
}

.bottomIcon {
  width: 300rpx;
  height: 300rpx;
}

.bottomText {
  color: #666;
}