.videoBox{
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.video{
  height: 970rpx;
  width: 100%; 
}
.close{
  width: 100%;
  height: 80rpx;
  line-height: 80rpx;
  background-color: #000;
  color: #fff;
  font-size: 34rpx;
  font-weight: bold;
  text-align: center;
  border-end-end-radius: 16px;
  border-end-start-radius: 16px;

}