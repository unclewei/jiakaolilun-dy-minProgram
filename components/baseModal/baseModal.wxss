/* 默认的弹窗body样式 */
.defaultModalContainer {
  position: absolute;
  border-radius: 12rpx;
  width: 660rpx;
  overflow-y: auto;
  left: 50%;
  top: 42%;
  transform: translate(-50%, -50%) scale(1);
  z-index: 12;
  box-sizing: border-box;
}
.cityCount{
  width: 560rpx;

}
.containerBg {
  position: absolute;
  width: 100%;
  height: 100%;
}

.bodyContent {
  position: relative;
  box-sizing: border-box;
  height: 100%;
  width: 100%;
  display: flex;
  flex-direction: column;
  overflow-y: auto;
  overflow-x: hidden;
  background-color: #FFF;
  border: 5rpx #000 solid;
  border-radius: 10rpx;
  animation-fill-mode: forwards;
}

.modalContainerShow {
  will-change: scale;
  animation: flexDowmBase 0.1s linear alternate 1;
  animation-fill-mode: forwards;
}

@keyframes modalShowBase {
  0% {
    transform: translate(-50%, -50%) scale(1);
  }

  60% {
    transform: translate(-50%, -50%) scale(1.1);
  }

  100% {
    transform: translate(-50%, -50%) scale(1);
  }
}

.modalContainerHide {
  will-change: scale;
  animation: modalHideBase 0.1s linear alternate 1;
  animation-fill-mode: forwards;
}

@keyframes modalHideBase {
  0% {
    transform: translate(-50%, -50%) scale(1);
  }

  60% {
    transform: translate(-50%, -50%) scale(1.1);
  }

  100% {
    transform: translate(-50%, -50%) scale(1);
  }
}

