/** 模态 **/
@import '../../utils/common.wxss';

.modal {
  position: fixed;
  top: 0rpx;
  left: 0rpx;
  right: 0rpx;
  bottom: 0rpx;
  width: 100%;
  height: 100vh;
  z-index: 10;
}

.modal-mask {
  position: absolute;
  width: 100%;
  height: 100%;
  z-index: 11;
  background-color: rgba(0, 0, 0, 0.70);
}

.animatedShow {
  will-change: opacity;
  animation: flexDowmBase 0.1s linear alternate 1;
  animation-fill-mode: forwards;
}

@keyframes flexDowmBase {
  0% {
    opacity: 0;
  }

  100% {
    opacity: 1;
  }
}

